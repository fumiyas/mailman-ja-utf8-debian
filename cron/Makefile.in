# NOTE: Makefile.in is converted into Makefile by the configure script
# in the parent directory.  Once configure has run, you can recreate
# the Makefile by running just config.status.

# Variables set by configure

VPATH=		@srcdir@
srcdir= 	@srcdir@
bindir= 	@bindir@
prefix=   	@prefix@
exec_prefix=	@exec_prefix@
DESTDIR=

CC=		@CC@
CHMOD=  	@CHMOD@
INSTALL=	@INSTALL@

DEFS=   	@DEFS@

# Customizable but not set by configure

OPT=		@OPT@
CFLAGS=		$(OPT) $(DEFS)
CRONDIR= 	$(prefix)/cron

SHELL=		/bin/sh

PROGRAMS=	checkdbs mailpasswds senddigests gate_news \
		nightly_gzip bumpdigests disabled cull_bad_shunt
FILES=  	crontab.in

BUILDDIR=	../build/cron

# Modes for directories and executables created by the install
# process.  Default to group-writable directories but
# user-only-writable for executables.
EXEMODE=	755
FILEMODE=	644


# Rules

all:

install:
	for f in $(FILES); \
	do \
	    $(INSTALL) -m $(FILEMODE) $$f $(DESTDIR)$(CRONDIR); \
	done
	for f in $(PROGRAMS); \
	do \
	    $(INSTALL) -m $(EXEMODE) $(BUILDDIR)/$$f $(DESTDIR)$(CRONDIR); \
	done

finish:

clean:

distclean:
	-rm Makefile crontab.in

/var/log/mailman/bounce {
	weekly
	missingok
	create 0664 list list
	rotate 4
	compress
	delaycompress
        postrotate
            [ -f '/var/run/mailman.pid' ] && kill -HUP $(cat /var/run/mailman.pid) || exit 0
        endscript
}

